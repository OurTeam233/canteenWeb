<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--命名空间为全类名-->
<mapper namespace="com.mapper.PictureMapper">
    <resultMap id="PictureResultMap" type="Picture">
        <id property="id" column="id"/>
        <result property="pictureUrl" column="pictureUrl"/>
        <result property="relationTable" column="relationTable"/>
        <result property="relationTableId" column="relationTable_id"/>
    </resultMap>

    <insert id="insertPicture" parameterType="picture" useGeneratedKeys="true" keyProperty="id">
        insert into picture(pictureUrl, relationTable, relationTable_id)
        values (#{pictureUrl}, #{relationTable}, #{relationTableId})
    </insert>

    <!--    查询所有轮播图    -->
    <select id="selectAllSlideshow" resultMap="PictureResultMap">
        SELECT id, relationTable_id, pictureUrl, relationTable
        FROM picture
        WHERE relationTable = 0
    </select>
</mapper>